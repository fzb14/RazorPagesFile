@page
@model RazorPagesFile.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Page</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MiniFile.Id" />
            <div class="form-group">
                <label asp-for="MiniFile.FileName" class="control-label"></label>
                <input asp-for="MiniFile.FileName" class="form-control" readonly/>
                <span asp-validation-for="MiniFile.FileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiniFile.Content" class="control-label"></label>
                <textarea asp-for="MiniFile.Content" class="form-control" ></textarea>
                <span asp-validation-for="MiniFile.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./View">Back to View Page</a>
</div>